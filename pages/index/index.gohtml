{{define "head"}}
	<style>
		h1 {
			margin-bottom: 32px;
		}

		article {
			display: flex;
			flex-direction: column;
			gap: 32px;
		}

		.songs {
			max-width: 600px;
			min-height: 300px;

			.folder-view {
				width: 100%;
			}

			h3 {
				font-size: 16px;
				margin-bottom: 4px;
			}



			table {
				width: 100%;
				border-collapse: collapse;

				.clickable {
					cursor: pointer;

					&:hover {
						background: color-mix(in srgb, transparent, var(--foreground) 10%);
					}
					&:active {
						background: color-mix(in srgb, transparent, var(--foreground) 20%);
					}
				}

				td {
					img {
						display: flex;
					}

					vertical-align: middle;
					padding: 4px 6px;

					&.min-width {
						width: 1px;
					}

					&.align-start {
						text-align: start;
					}
					&.align-end {
						text-align: end;
					}
				}
			}
		}
	</style>
{{end}}

{{define "content"}}
	<h1>Homepage</h1>
	<article>
		<h2>Available songs</h2>
		<div class="card songs" hx-get="/listSongs" hx-trigger="load" id="songs-browser"></div>
	</article>
{{end}}
